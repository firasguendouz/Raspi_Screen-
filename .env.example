# Server Configuration
SERVER_URL=http://localhost:5001
SERVER_PORT=5001
FLASK_ENV=production
FLASK_APP=server/app.py

# WiFi Configuration
WIFI_SSID=RaspberryPi_AP
WIFI_PASSWORD=raspberry
BACKUP_WIFI_SSID=backup_network
BACKUP_WIFI_PASSWORD=backup_password
WIFI_COUNTRY=US

# Access Point Configuration
AP_SSID=RaspberryPi_AP
AP_PASSPHRASE=raspberry
AP_CHANNEL=7
AP_COUNTRY=US
AP_INTERFACE=wlan0
AP_IP=192.168.4.1
AP_NETMASK=255.255.255.0
AP_DHCP_START=192.168.4.2
AP_DHCP_END=192.168.4.20

# Security Configuration
AP_AUTH_ALGS=1
AP_WPA_VERSION=2
AP_KEY_MGMT=WPA-PSK
AP_PAIRWISE=CCMP

# Monitoring Configuration
AP_CHECK_INTERVAL=30
AP_MAX_FAILURES=3
AP_STABILIZATION_WAIT=10
AP_TEST_PING_TARGET=8.8.8.8

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=/var/log/raspi_screen
AP_LOG_MAX_SIZE=10M
AP_LOG_KEEP_DAYS=7

# Display Configuration
FALLBACK_CONTENT=file:///usr/share/raspi-screen/offline.html
REFRESH_INTERVAL=300
SCREEN_ROTATION=normal
SCREEN_BRIGHTNESS=100

# API Configuration
API_KEY=your_api_key_here
API_URL=http://localhost:5001/api
METRICS_INTERVAL=60

# Development Configuration
DEBUG=false
TESTING=false
DEVELOPMENT_MODE=false

# Localization
DEFAULT_LANGUAGE=en
TIMEZONE=UTC

# System Configuration
CONFIG_DIR=/etc/raspi-screen
CACHE_DIR=/var/cache/raspi-screen
DATA_DIR=/var/lib/raspi-screen 